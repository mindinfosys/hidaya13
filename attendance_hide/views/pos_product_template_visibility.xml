<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

   <record id="product_template_update_view_form" model="ir.ui.view">
        <field name="name">product.template.update.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_group_invisible" invisible="1"></field>
<!--                  <attribute name="attrs">{'invisible': [('is_group_invisible', '=', 'user')]}</attribute>-->

            </xpath>
            <xpath expr="//page[@name='sales']" position="attributes">
                  <attribute name="attrs">{'invisible': [('is_group_invisible', '=', True)]}</attribute>

            </xpath>
                  <xpath expr="//page[@name='pos']" position="attributes">
                  <attribute name="attrs">{'invisible': [('is_group_invisible', '=', True)]}</attribute>

            </xpath>

                  <xpath expr="//page[@name='invoicing']" position="attributes">
                  <attribute name="attrs">{'invisible': [('is_group_invisible', '=', True)]}</attribute>

            </xpath>
             <xpath expr="//page[@name='inventory']" position="attributes">
                  <attribute name="attrs">{'invisible': [('is_group_invisible', '=', True)]}</attribute>

            </xpath>
            <xpath expr="//page[@name='purchase']" position="attributes">
                  <attribute name="attrs">{'invisible': [('is_group_invisible', '=', True)]}</attribute>

            </xpath>
            <xpath expr="//span[@name='update_cost_price']" position="attributes">
                  <attribute name="attrs">{'invisible': [('is_group_invisible', '=', True)]}</attribute>

            </xpath>



        </field>
    </record>

         <menuitem name="Current stock in Excel"
                  parent="point_of_sale.menu_point_rep"
                  id="export_excel_new"
                  action="mis_xls_reports.wizard_act"
                  sequence="1"/>


    </data>
</odoo>