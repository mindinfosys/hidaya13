<odoo>
    <record id="view_stock_return_picking_form_inherit_credit_debit_note" model="ir.ui.view">
        <field name="name">stock.return.picking.form.credit.debit.note</field>
        <field name="model">stock.return.picking</field>
        <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='create_returns']" position="after">
                <field name="picking_type_code" invisible="1"/>
                <button name="create_returns_credit_debit" string="Return with Credit Note" type="object" class="btn-primary" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                <button name="create_returns_credit_debit" string="Return with Debit Note" type="object" class="btn-primary" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="after">
                <field name="custom_journal_id"/>
            </xpath>
        </field>
    </record>
</odoo>
