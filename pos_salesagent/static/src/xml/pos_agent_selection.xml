<?xml version="1.0" encoding="UTF-8"?>
<template id="template" xml:space="preserve">



    <t t-name="AgentSelectionButton">
        <div class='control-button in_note'>
            <i class="fa fa-user-plus">Add Sales Agent</i>
        </div>
    </t>
    <t t-name="AgentPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-note">
                <p class="title"><t t-esc=" widget.options.title || 'Select Sales Agent' " /></p>
                 <select id="employee_select" style="width:461px;" class="employee_select">
                    <option id="" value="select"></option>
                </select>
                <div class="footer">
                    <button class="button confirm">
                        Select
                    </button>
                    <button class="button cancel">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </t>

    <t t-extend="OrderReceipt">
        <t t-jquery=".pos-receipt .pos-receipt-contact" t-operation='append'>
            <t t-if='order.agent_id'>
                <div>Sales Person : <t t-esc='order.order_agent'/></div>
            </t>
        </t>
        <t t-jquery=".pos-receipt .before-footer" t-operation='before'>
             <br/>

             <t t-set="totqty" t-value="0"/>
             <t t-foreach='receipt.orderlines' t-as='ln'>
                 <t t-set="totqty" t-value='totqty+ln.quantity'/>
             </t>
                <div class="row totalquantity">
                    <hr/>
                    <span class="pos-receipt-left-align">Total Items : <t t-esc='receipt.orderlines.length'/></span>
                    <span class="pos-receipt-right-align">Total Quantities : <t t-esc='totqty'/></span>
                     <hr/>
            </div>
        </t>
    </t>
</template>
