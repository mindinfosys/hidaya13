<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hr_employee_agent_inherited">
            <field name="name">hr.agent.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='department_id']" position="after">
                    <field name="is_a_agent"/>
                    <field name="sales_commision"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_employee_agent_public_inherited">
            <field name="name">hr.agent.public.view</field>
            <field name="model">hr.employee.public</field>
            <field name="inherit_id" ref="hr.hr_employee_public_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='department_id']" position="after">
                    <field name="is_a_agent"/>
                    <field name="sales_commision"/>

                </xpath>
            </field>
        </record>
    </data>
</odoo>