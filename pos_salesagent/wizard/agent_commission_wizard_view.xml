<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="salesagent_commission_report_wizard" model="ir.ui.view">
            <field name="name">salesagent.commission.report.wizard</field>
            <field name="model">salesagent.commission.wizard</field>
            <field name="arch" type="xml">
                <form string="Sales Agent Commission">
                    <group col="4" colspan="4">
                        <field name="report_start_date"/>
                        <field name="report_end_date"/>
                    </group>
                    <footer>
                        <button name="download_report" type="object" string="Download Sales Agent Commission"
                                class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_salesagent_commission_report" model="ir.actions.act_window">
            <field name="name">Sales Agent Commission Report</field>
            <field name="res_model">salesagent.commission.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem id="menu_salesagent_commission_report"
                  name="Sales Agent Commission Report"
                  parent="point_of_sale.menu_point_rep" groups="point_of_sale.group_pos_manager"
                  action="action_salesagent_commission_report"/>
    </data>
</odoo>