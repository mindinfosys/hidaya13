<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_product_qty_hand_reorder_qty_list" model="ir.ui.view">
        <field name="name">product.product.qty_hand.reord.qty</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false">
                <field name="default_code" optional="show" readonly="1"/>
                <field name="barcode" optional="hide" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="product_template_attribute_value_ids" widget="many2many_tags" groups="product.group_product_variant" readonly="1"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide" readonly="1"/>
                <field name="lst_price" optional="show" string="Sales Price"/>
                <field name="standard_price" optional="show" readonly="1"/>
                <field name="categ_id" optional="hide"/>
                <field name="type" optional="hide" readonly="1"/>
                <field name="price" invisible="not context.get('pricelist',False)"/>
                <field name="uom_id" options="{'no_open': True, 'no_create': True}" groups="uom.group_uom" optional="show" readonly="1"/>
                <field name="product_tmpl_id" invisible="1" readonly="1"/>
                <field name="active" invisible="1"/>
                <field name="qty_available"/>
                <field name="reordering_min_qty"/>
            </tree>
        </field>
    </record>
    
    <record id="product_qty_hand_reorder_qty_lst_action" model="ir.actions.act_window">
        <field name="name">Products to Purchase</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="product.product_search_form_view"/>
        <field name="view_id" ref="product_purchase_extend.view_product_qty_hand_reorder_qty_list"/>
        <field name="context">{'search_qty_hand_min_reord_qty': 1, 'create':0, 'edit':0}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new product variant
          </p><p>
            You must define a product for everything you sell or purchase,
            whether it's a storable product, a consumable or a service.
          </p>
        </field>
    </record>
    
    <menuitem id="menu_product_qty_hand_reorder_qty_lst" name="Products to Purchase" action="product_qty_hand_reorder_qty_lst_action" parent="stock.menu_stock_inventory_control"/>

</odoo>
