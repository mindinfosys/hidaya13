<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
        <record id="custom_email_template_approve_purchase" model="mail.template">
            <field name="name">Purchase: Approve Send by email</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="email_from"></field>
            <field name="partner_to"></field>
            <field name="subject">${object.name} has going to Approve</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Dear ${object.partner_id.name},
                    <br /><br />
                    Here is your Purchase Order <strong>${object.name}</strong> is going to approve
                    <br /><br />
                    Do not hesitate to contact us if you have any questions.
                </p>
                </div>
            </field>
            <field name="lang">${object.partner_id.lang}</field>
        </record>
    </data>
</odoo>
