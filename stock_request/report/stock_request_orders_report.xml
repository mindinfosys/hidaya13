<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <report
        string="Request Order"
        id="action_report_stock_request"
        model="stock.request"
        report_type="qweb-pdf"
        name="stock_request.report_stock_request"
        file="stock_request.report_stock_request"
    />

    <template id="report_stock_request">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">

                    <div class="page">
                        <h2 class="text-center">
                            Stock Request
                        </h2>
                        <div class="row col-12">
                            <div class="col-6">
                                <h2>
                                    <span t-field="o.name"/>
                                </h2>
                            </div>

                        </div>
                        <div class="row mt32 mb32">
                            <div class="col-3" name="div_sched_date">
                                <strong>Expected Date:</strong>
                                <p t-field="o.expected_date"/>
                            </div>
                            <div class="col-3" name="div_origin">
                                <strong>Type :</strong>
                                <p t-field="o.request_type.name"/>
                            </div>
                            <div class="col-3" name="div_sched_date">
                                <strong>From:</strong>
                                <p t-field="o.from_location_id.name"/>
                            </div>
                            <div class="col-3" name="div_sched_date">
                                <strong>To:</strong>
                                <p t-field="o.to_location_id.name"/>
                            </div>
                        </div>

                        <div class="row mt32 mb32">
                            <div class="col-auto" name="div_origin">
                                <strong>Remarks:</strong>
                                <p t-field="o.remarks"/>
                            </div>
                        </div>
                        <table class="table table-sm" name="stock_move_table">
                            <thead>
                                <tr>
                                    <th name="th_sm_product"><strong>Product</strong></th>
                                    <th name="th_sm_product"><strong>Barcode</strong></th>
                                    <th name="th_sm_product"><strong>Barcode</strong></th>
                                    <th name="th_sm_quantity"><strong>Quantity</strong></th>
                                    <th name="th_sm_quantity"><strong>Done Quantity</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.request_ids" t-as="request">
                                    <td>
                                        <span t-field="request.product_id"/>
                                    </td>
                                     <td>
                                        <span t-field="request.product_id.barcode"/>
                                    </td>
                                    <td>
                                        <span>
                                            <img t-if="len(request.product_id.barcode) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=%s' % ('EAN13', request.product_id.barcode, 400, 100, 0)" style="height:35px" alt="Barcode"/>
                                            <img t-elif="len(request.product_id.barcode) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=%s' % ('EAN8', request.product_id.barcode, 400, 100, 0)" style="height:35px" alt="Barcode"/>
                                            <img t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=%s' % ('Code128', request.product_id.barcode, 400, 100, 0)" style="height:35px" alt="Barcode"/>
                                        </span>
                                    </td>
                                    <td>
                                        <span t-field="request.product_uom_qty"/>
                                        <span t-field="request.product_uom_id"/>
                                    </td>
                                    <td>
                                        <span t-field="request.qty_done"/>
                                        <span t-field="request.product_uom_id"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">

                      <div class="col-3" style="right;">
                          <p class="text-center" style="padding-left:5mm;">
                              <br/><br/><br/><br/><br/>

                          </p>

                        <p class="text-center" style="padding-left:5mm; border-top:1px solid black; border-length: 7px;">

                            Requested by</p>
                      </div>
                        <div class="col-3" style="center;">
                          <p class="text-center" style="padding-left:5mm;">
                              <br/><br/><br/><br/><br/>

                          </p>

                        <p class="text-center" style="padding-left:5mm; border-top:1px solid black; border-length: 7px;">

                            Transported by</p>
                      </div>

                        <div class="col-3" style="center;">
                  <p class="text-center" style="padding-left:5mm;">
                      <br/><br/><br/><br/><br/>

                  </p>

                <p class="text-center" style="padding-left:5mm; border-top:1px solid black; border-length: 7px;">

                    Stock Prepared by</p>
              </div>



              <div class="col-3" style="left">
                  <p class="text-center" style="padding-left:5mm;">
                      <br/><br/><br/><br/><br/>

                  </p>

                <p class="text-center" style="padding-left:5mm; border-top:1px solid black; border-length: 7px;">
                     Stock Received By

                </p>
              </div>
        </div>
                </t>
             </t>
        </t>
    </template>
</odoo>
